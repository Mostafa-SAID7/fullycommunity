{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "projects",
  "projects": {
    "community-car-main": {
      "projectType": "application",
      "root": "projects/main",
      "sourceRoot": "projects/main/src",
      "prefix": "app",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/main",
            "index": "projects/main/src/index.html",
            "browser": "projects/main/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/main/tsconfig.app.json",
            "assets": ["projects/main/src/favicon.ico", "projects/main/src/assets"],
            "styles": ["projects/main/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "500kb", "maximumError": "1mb" },
                { "type": "anyComponentStyle", "maximumWarning": "2kb", "maximumError": "4kb" }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4200
          },
          "configurations": {
            "production": { "buildTarget": "community-car-main:build:production" },
            "development": { "buildTarget": "community-car-main:build:development" }
          },
          "defaultConfiguration": "development"
        }
      }
    },
    "community-car-admin": {
      "projectType": "application",
      "root": "projects/admin",
      "sourceRoot": "projects/admin/src",
      "prefix": "admin",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:application",
          "options": {
            "outputPath": "dist/admin",
            "index": "projects/admin/src/index.html",
            "browser": "projects/admin/src/main.ts",
            "polyfills": ["zone.js"],
            "tsConfig": "projects/admin/tsconfig.app.json",
            "assets": ["projects/admin/src/favicon.ico", "projects/admin/src/assets"],
            "styles": ["projects/admin/src/styles.scss"],
            "scripts": []
          },
          "configurations": {
            "production": {
              "budgets": [
                { "type": "initial", "maximumWarning": "500kb", "maximumError": "1mb" },
                { "type": "anyComponentStyle", "maximumWarning": "2kb", "maximumError": "4kb" }
              ],
              "outputHashing": "all"
            },
            "development": {
              "optimization": false,
              "extractLicenses": false,
              "sourceMap": true
            }
          },
          "defaultConfiguration": "production"
        },
        "serve": {
          "builder": "@angular-devkit/build-angular:dev-server",
          "options": {
            "port": 4201
          },
          "configurations": {
            "production": { "buildTarget": "community-car-admin:build:production" },
            "development": { "buildTarget": "community-car-admin:build:development" }
          },
          "defaultConfiguration": "development"
        }
      }
    }
  }
}
